/* pages/map/map.wxss */
.map{
  position: relative;
  width: 100%;
  height: 100%;
  font-size: 34rpx;
}

.section{
  position: relative;
  height: 85%; 
}
map{
   width: 100%; 
   height: 100%; 
}
.text{
  font-size: 32rpx;
}

.button-group{
  position: absolute;
  z-index: 100;
  bottom: 50rpx;
  right: 50rpx;
  float: right;
}

.searchCon{
  position: fixed;
  z-index: 200;
  background-color: rgb(245, 245, 245);
  margin-top: 90rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
.searchCon-item{
  display: flex;
  padding: 20rpx;
  text-overflow: ellipsis;
}
.searchCon-item .searchIcon{
  font-size: 32rpx;
  min-width:6%;
  width:6%;
 
}
.searchCon-item .searchIcon cover-image{
  width: 100%;
}
.icon-item{
  background-image: url("data:image/svg+xml;base64,");
  background-size: cover;
  background-color: rgb(206, 206, 206);
}

.icon{
  display: inline-block;
  position:fixed;
  margin-top: 30rpx;
  margin-left: 40rpx;
  width:60rpx;
  height: 60rpx;
  z-index: 150;
}

.sousuo{
  position:fixed;
  z-index: 100;
  height: 60rpx;
  width: 600rpx;
  margin-top:30rpx;
  margin-left:100rpx;
  background-color: rgb(206, 206, 206);

}

.addressname{
  display: flex;
  padding-left: 10rpx;
  text-overflow: ellipsis;
}

.addressname  cover-view{
  color: #999;
  font-size: 30rpx;
  padding-left: 10rpx;
  text-overflow: ellipsis;
}
.mapPic{
  position: absolute;
  top: -71rpx;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width:60rpx;
  height:60rpx;
  /* background: #000; */
}
.mapPic cover-image{
  width: 100%;
}

.lushuPic{
  position: absolute;
  top: -51rpx;
  margin: auto;
  width:60rpx;
  height:60rpx;
  /* background: #000; */
}
.lushuPic cover-image{
  width: 100%;
}


.footer{
  height: 10%;
  padding:10rpx;
  width: 100%;
}
.address-container>view:not(:last-of-type){
  padding-bottom: 5rpx;
}
.address-container>view{
  display: flex;
  flex-wrap: wrap;
  font-size: medium;
}

.address-container-marker>view{
  display: flex;
  flex-wrap: wrap;
  font-size: small;
}

.address-container>view text:nth-of-type(1){
  width: 100%;
}
.address-container>view text:nth-of-type(2){
  width: 85%;
}

.stroke {
  font-size: larger !important;
  font-weight: 600;
}